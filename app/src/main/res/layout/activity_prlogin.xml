<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PRLoginActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/pr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pr_toolbar">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#EEECF1"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Participant's name"
                    android:inputType="textPersonName"
                    android:textColor="#FAF7FD"
                    android:textColorHighlight="#E6E5EB"
                    android:textColorHint="#F5EDF1"
                    app:errorEnabled="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/emails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#FAF6F6"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:textColor="#EBE8EE"
                    android:textColorHighlight="#F5F4FA"
                    android:textColorHint="#F2F1F3"
                    app:errorEnabled="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/colleges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#F5EDED"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="College name"
                    android:inputType="textImeMultiLine"
                    android:textColor="#E8E4EC"
                    android:textColorHint="#F6F5F8"
                    app:errorEnabled="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#F0EEF1"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:textColor="#F8F5F7"
                    android:textColorHint="#F8F6F7"
                    app:errorEnabled="true" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="Team Count :-"
                android:textColor="#FAF6F8"
                android:textColorHint="#F7F4F5"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#F7F4FC"
                android:gravity="center_horizontal" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/secondTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#E4DFDF"
                android:visibility="gone"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Second team member name"
                    android:inputType="textPersonName"
                    android:textColor="#F8F2F2"
                    android:textColorHint="#F2F1F3"
                    app:errorEnabled="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/thirdTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#F3EDF0"
                android:visibility="gone"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Third team member name"
                    android:inputType="textPersonName"
                    android:textColor="#EDEBF0"
                    android:textColorHint="#F8F7FA"
                    app:errorEnabled="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fourthTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#F7F5FA"
                android:visibility="gone"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fourth team member name"
                    android:inputType="textPersonName"
                    android:textColor="#E9E8F0"
                    android:textColorHint="#F1F0E9"
                    app:errorEnabled="true" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/modeOfPaymentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mode of payment :-"
                android:textColor="#F3EDF0"
                android:textColorHint="#F5F0ED" />

            <RadioGroup
                android:id="@+id/paymentMethod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#090708"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/cashId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cash"
                    android:textColor="#F7F3F5"
                    android:buttonTint="#FFFFFF" />

                <RadioButton
                    android:id="@+id/payId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PayTM (QR)"
                    android:textColor="#FAF8FC"
                    android:buttonTint="#FFFFFF"/>

                <RadioButton
                    android:id="@+id/upiId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BHIM UPI (QR)"
                    android:textColor="#EDEBF0"
                    android:buttonTint="#FFFFFF"/>
            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/volunteers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#FDFCFF"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PR volunteer's name"
                    android:inputType="textPersonName"
                    android:textColor="#F5F2F8"
                    android:textColorHint="#880E4F"
                    app:errorEnabled="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#EDEEF5"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter remark(Optional)"
                    android:inputType="textLongMessage"
                    android:textColor="#FCF3F3"
                    android:textColorHighlight="#FCF5F5"
                    android:textColorHint="#F7F1F1"
                    app:errorEnabled="true" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F3F8"
                android:onClick="confirmInput"
                android:text="Submit" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.DrawerLayout>